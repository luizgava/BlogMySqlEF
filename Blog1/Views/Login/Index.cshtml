@model Blog1.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Index", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, 
                                         FormMethod.Post, 
                                         new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(m => m.Login, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Login, new { @class = "form-control", style = "width: 280px" })
            @Html.ValidationMessageFor(m => m.Login)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Senha, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Senha, new { @class = "form-control", style = "width: 280px" })
            @Html.ValidationMessageFor(m => m.Senha)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="checkbox">
                @Html.CheckBoxFor(m => m.Lembrar)
                @Html.LabelFor(m => m.Lembrar)
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Entrar" class="btn btn-primary" />
        </div>
    </div>
}